<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shivanshu.alumniconnect.StudentDetailFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:hint="Enter your name"
            android:textColor="@color/edittext_color_2"
            android:textStyle="bold"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:background="@drawable/selected_box"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_validation"
            android:text="@string/warning_msg"
            android:textColor="@color/warning_color"
            android:background="@drawable/waring_box"
            android:visibility="gone"/>
        <TextView
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="College Name"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <EditText
            android:maxLines="1"
            android:id="@+id/college_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:textColor="@color/edittext_color_2"
            android:textStyle="bold"
            android:paddingBottom="15dp"
            android:background="@drawable/selected_box"
            android:hint="College name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/college_validation"
            android:text="@string/warning_msg"
            android:textColor="@color/warning_color"
            android:background="@drawable/waring_box"
            android:visibility="gone"/>
        <TextView
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="College Id"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <EditText
            android:maxLines="1"
            android:id="@+id/college_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:textColor="@color/edittext_color_2"
            android:textStyle="bold"
            android:paddingBottom="15dp"
            android:background="@drawable/selected_box"
            android:hint="College Id"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/college_id_validation"
            android:text="@string/warning_msg"
            android:textColor="@color/warning_color"
            android:background="@drawable/waring_box"
            android:visibility="gone"/>
        <TextView
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email Id:"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <EditText
            android:maxLines="1"
            android:id="@+id/email_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/edittext_color_2"
            android:textStyle="bold"
            android:hint="Personal Email Id"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:background="@drawable/selected_box"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/email_validation"
            android:text="krapya sahi email dalein"
            android:textColor="@color/warning_color"
            android:background="@drawable/waring_box"
            android:visibility="gone"/>
        <TextView
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Number:"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:background="@drawable/selected_box"
                android:textSize="18dp"/>
            <EditText
                android:maxLines="1"
                android:id="@+id/contact_number"
                android:textColor="@color/edittext_color_2"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Your Contact Number here"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:background="@drawable/selected_box"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phone_number_validation"
            android:text="@string/warning_msg"
            android:textColor="@color/warning_color"
            android:background="@drawable/waring_box"
            android:visibility="gone"/>
        <TextView
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Branch:"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <EditText
            android:maxLines="1"
            android:id="@+id/branch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:textColor="@color/edittext_color_2"
            android:textStyle="bold"
            android:paddingBottom="15dp"
            android:background="@drawable/selected_box"
            android:hint="CSE,IT,EE,CE etc"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/branch_validation"
            android:text="@string/warning_msg"
            android:textColor="@color/warning_color"
            android:background="@drawable/waring_box"
            android:visibility="gone"/>
        <Button
            android:id="@+id/take_student_detail_button"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:background="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:text="@string/signup" />
    </LinearLayout>
</ScrollView>
