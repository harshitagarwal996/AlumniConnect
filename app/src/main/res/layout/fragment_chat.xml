<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.shivanshu.alumniconnect.ChatFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/chat_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        >

    </android.support.v7.widget.RecyclerView>
    <TextView
        android:id="@+id/chat_box_warning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/waring_box"
        android:textColor="@color/warning_color"
        android:text="sorry you Didn't type anything!"
        android:visibility="gone"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/chat_data"
        android:layout_width="0dp"
        android:paddingTop="16dp"
        android:layout_weight="4"
        android:paddingBottom="16dp"
        android:layout_height="wrap_content"
        android:text=""
        android:background="@drawable/chat_box_design"
        />
        <Button
            android:id="@+id/chat_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"/>
    </LinearLayout>

</LinearLayout>
