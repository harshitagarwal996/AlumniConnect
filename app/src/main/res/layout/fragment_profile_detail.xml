<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.shivanshu.alumniconnect.ProfileDetailFragment">
    <TextView

        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:id="@+id/detai_changing_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Profile Details"
        android:textStyle="bold"
        android:textColor="@color/edittext_color_2"
        android:background="@drawable/selected_box"
        android:layout_gravity="right"/>

<android.support.v7.widget.RecyclerView
    android:id="@+id/profile_detail_view_recyclerview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
</LinearLayout>
